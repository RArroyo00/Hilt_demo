<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/profile_bg"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="8dp"
        android:id="@+id/img_biker_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="80dp"
        tools:src="@drawable/ic_biker"
        android:layout_height="80dp"/>

    <TextView
        android:layout_width="0dp"
        android:id="@+id/name_biker_profile"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/BikerCopilot.Hading"
        tools:text="Rulo"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toEndOf="@id/img_biker_profile"
        app:layout_constraintTop_toTopOf="@id/img_biker_profile" />

</androidx.constraintlayout.widget.ConstraintLayout>